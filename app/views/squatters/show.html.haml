%main(itemscope itemtype="https://schema.org/Person")
  %h1(itemprop="name")= @squatter.username
  - unless !(current_squatter == @squatter || current_squatter.admin?)
    %p(itemprop="email")
      %strong Email
      %br
      = @squatter.email
    %p(itemprop="address")
      %strong Location
      %br
      = @squatter.location
  = link_to "Send a PM", new_squatter_message_path(@squatter)
